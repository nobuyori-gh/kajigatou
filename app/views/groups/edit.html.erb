<div class="container">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <%= render '/layouts/errors', obj:  @group %>
      <h2>グループ情報編集</h2>
      <div class="col-xs-5">
        <div class="row">
          <%= render '/groups/group', group: @group, url: group_path(@group), submit: '更新する' %>
          <%= link_to "グループを削除する", group_deletion_path(@group), class: "btn btn-danger" %>
        </div>
      </div>
      <div class="col-xs-7"></div>
    </div>
    <div class="col-xs-1"></div>
  </div>
</div>