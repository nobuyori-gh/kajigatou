<div class="container">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <div class="col-xs-6">
        <h3><%= @group.name %>のメンバー</h3>
        <table class="table">
          <thead>
            <tr>
              <th>アイコン</th>
              <th>名前</th>
              <th>自己紹介</th>
            </tr>
          </thead>
          <tbody>
            <% @group_users.each do |group_user| %>
            <tr>
              <td><%= attachment_image_tag(group_user, :image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
              <td><%= group_user.name %></td>
              <td><%= group_user.introduction %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- <div class="col-xs-1"></div> -->

      <div class="col-xs-6">
      </div>
    </div>
    <div class="col-xs-1"></div>
  </div>
</div>