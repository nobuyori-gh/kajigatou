<div class="col-xs-5">
  <h3><%= @group.name %>のメンバー</h3>
  <table class="table">
    <thead>
      <tr>
        <th>アイコン</th>
        <th>名前</th>
        <th>自己紹介</th>
      </tr>
    </thead>
    <tbody>
      <% @group_users.each do |group_user| %>
      <tr>
        <td><%= attachment_image_tag(group_user, :image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
        <td><%= group_user.name %></td>
        <td><%= group_user.introduction %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="col-xs-1"></div>

<div class="col-xs-6">
  <h3>入会リクエスト一覧</h3>
  <table class="table">
    <thead>
      <tr>
        <th>アイコン</th>
        <th>名前</th>
        <th>自己紹介</th>
        <th>リクエスト</th>
      </tr>
    </thead>
    <tbody>
      <% @group_requests.each do |group_request| %>
      <tr>
        <td><%= attachment_image_tag(group_request.user, :image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
        <td><%= group_request.user.name %></td>
        <td><%= group_request.user.introduction %></td>
        <td>
          <%= link_to "承認", allow_path(id:group_request.id, group_id:@group.id, user_id:group_request.user_id), method: :post, class:'btn btn-primary' %>
          <%= link_to "否認", reject_path(id:group_request.id, group_id:@group.id), method: :delete, class:'btn btn-danger' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
