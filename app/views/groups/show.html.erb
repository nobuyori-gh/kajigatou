<div class="container">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <%= render '/layouts/errors', obj: @group %>
      <h2>グループページ</h2>
      <div class="col-xs-5">
        <div class="row">
          <%= render '/groups/profile', group: @group %>
          <%= link_to '',edit_group_path(@group), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_group_#{@group.id}" %>
        </div>
        <div class="row">
          <%= link_to 'メンバー＆入会リクエスト一覧', class: "btn btn-primary　col-xs-12" %>
        </div>
      </div>

      <div class="col-xs-2"></div>

      <div class="col-xs-5">
        <div class="row">
          <%= link_to 'タスク登録', class: "btn btn-primary　col-xs-12" %>
        </div>
        <div class="row">
          <h3>タスク一覧</h3>
        </div>
      </div>
    </div>
    <div class="col-xs-1"></div>
  </div>
</div>