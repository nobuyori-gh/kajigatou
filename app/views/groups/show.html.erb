<%= render '/layouts/errors', obj: @group %>
<h2>グループページ</h2>
<div class="col-xs-3">
  <div class="field row">
    <%= render '/groups/profile', group: @group %>
    <%= link_to '',edit_group_path(@group), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_group_#{@group.id}" %>
  </div>
  <div class="row">
    <%= link_to group_member_path(@group), class: "col-xs-12 btn btn-primary" do %>
     <p>グループメンバー<br>&入会リクエスト</p>
    <% end %>
  </div>
</div>

<div class="col-xs-1"></div>

<div class="col-xs-8">
  <div class="row">
    <%= link_to 'タスク登録', new_group_task_path(group_id: @group.id), class: "pull-right btn btn-primary" %>
  </div>
  <div class="row">
    <h3>タスク一覧</h3>
    <% if @group_tasks.present? %>
    <table class="table">
      <thead>
        <tr>
          <th>タイトル</th>
          <th>担当者</th>
          <th>期日</th>
          <th>進捗</th>
          <th>ありがとう</th>
          <th>コメント</th>
        </tr>
      </thead>
      <tbody>
        <% @group_tasks.each do |group_task| %>
        <tr>
          <%= render 'task', group_task: group_task %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
    <p>登録されていません</p>
    <% end %>
  </div>
</div>