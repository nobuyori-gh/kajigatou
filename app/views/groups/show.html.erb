<div class="container">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <%= render '/layouts/errors', obj:  @group %>
      <h2>グループページ</h2>
      <div class="col-xs-5">
        <div class="row">
          <%= render '/groups/profile', group: @group %>
          <%= link_to '',edit_group_path(@group), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_group_#{@group.id}" %>
        </div>
        <div class="row">
          <%= link_to 'グループメンバー&入会リクエスト', group_member_path(@group), class: "col-xs-12 btn btn-primary" %>
        </div>
      </div>

      <div class="col-xs-2"></div>

      <div class="col-xs-5">
        <div class="row">
          <%= link_to 'タスク登録', new_group_task_path(group_id: @group.id), class: "pull-right btn btn-primary" %>
        </div>
        <div class="row">
          <h3>タスク一覧</h3>
          <table class="table">
            <thead>
              <tr>
                <th>タイトル</th>
                <th>期日</th>
                <th>完了チェック</th>
                <th>ありがとう数</th>
                <th>コメント数</th>
              </tr>
            </thead>
            <tbody>
              <% @group_tasks.each do |group_task| %>
              <tr>
                <td><%= link_to group_task.title, group_task_path(group_task) %></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-xs-1"></div>
  </div>
</div>