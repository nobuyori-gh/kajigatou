<%= render '/layouts/errors', obj:  @group %>
<h2>グループページ</h2>
<div class="col-xs-3">
  <div class="row">
    <%= render '/groups/profile', group: @group %>
    <%= link_to '',edit_group_path(@group), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_group_#{@group.id}" %>
  </div>
  <div class="row">
    <%= link_to 'グループメンバー&入会リクエスト', group_member_path(@group), class: "col-xs-12 btn btn-primary" %>
  </div>
</div>

<div class="col-xs-1"></div>

<div class="col-xs-8">
  <div class="row">
    <%= link_to 'タスク登録', new_group_task_path(group_id: @group.id), class: "pull-right btn btn-primary" %>
  </div>
  <div class="row">
    <h3>タスク一覧</h3>
    <table class="table">
      <thead>
        <tr>
          <th>タイトル</th>
          <th>担当者</th>
          <th>期日</th>
          <th>進捗</th>
          <th>ありがとう</th>
          <th>コメント</th>
        </tr>
      </thead>
      <tbody>
        <% @group_tasks.each do |group_task| %>
        <tr>
          <td><%= link_to group_task.title, group_task_path(group_task) %></td>
          <td><%= group_task.rep %></td>
          <td><%= l group_task.deadline, format: :short %></td>
          <td>
            <% if group_task.status = false %>
            未完了
            <% else %>
            完了
            <% end %>
          </td>
          <td>
            <% if group_task.thank_you_by?(current_user) %>
            <%= link_to group_task_thank_you_path(group_task), method: :delete do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
            <%= group_task.thank_yous.count %>
            <% end %>
            <% else %>
            <%= link_to group_task_thank_you_path(group_task), method: :post do %>
            <i class="fa fa-heart-o" aria-hidden="true"></i>
            <%= group_task.thank_yous.count %>
            <% end %>
            <% end %>
          </td>
          <td><%= group_task.group_comments.count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>