<div class="container">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <%= render '/layouts/errors', obj: @group %>
      <h2>マイページ</h2>
      <div class="col-xs-5">
        <h3>登録情報</h3>

        <table class="table">
          <tbody>
            <tr>
              <td>アイコン</td>
              <td></td>
            </tr>
            <tr>
              <td>名前</td>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <td>自己紹介</td>
              <td><%= @user.introduction %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @user.email %></td>
            </tr>
          </tbody>
        </table>

        <% if @user == current_user %>
        <%= link_to '',edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>
        <% end %>
      </div>

      <div class="col-xs-2"></div>

      <div class="col-xs-5">
        <h3>グループを作る</h3>
        <%= form_with model: @group,url: groups_path, local: :true do |f| %>
        <div class="field row">
          <%= f.label :グループ名 %>
          <%= f.text_field :name, class: "col-xs-12" %>
        </div>
        <div  class="field row">
          <%= f.label :説明文 %>
          <%= f.text_field :description, class: "col-xs-12" %>
        </div>
        <div class="actions row">
          <%= f.submit "作成する",class: "btn btn-primary col-xs-12" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-xs-1"></div>
  </div>
</div>