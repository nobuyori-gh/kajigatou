<div class="container">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <div class="col-xs-6">
        <h3>グループメンバー</h3>
        <table class="table">
          <thead>
            <tr>
              <th>アイコン</th>
              <th>名前</th>
              <th>自己紹介</th>
            </tr>
          </thead>
          <tbody>
            <% @group_users.each do |group_user| %>
            <tr>
              <td><%= attachment_image_tag(group_user, :image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
              <td><%= group_user.name %></td>
              <td><%= group_user.introduction %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- <div class="col-xs-1"></div> -->

      <div class="col-xs-6">
        <h3>リクエスト一覧</h3>
        <table class="table">
          <thead>
            <tr>
              <th>アイコン</th>
              <th>名前</th>
              <th>自己紹介</th>
              <th>リクエスト</th>
            </tr>
          </thead>
          <tbody>
            <% @requests.each do |request| %>
            <tr>
              <td><%= attachment_image_tag(request.user, :image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
              <td><%= request.user.name %></td>
              <td><%= request.user.description %></td>
              <td>
                <%= link_to '承認', allow_path(group_id:group.id, id:request.id), method: :post %>
                <%= link_to '否認', reject_path(group_id:group.id, id:request.id), method: :delete %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-xs-1"></div>
  </div>
</div>